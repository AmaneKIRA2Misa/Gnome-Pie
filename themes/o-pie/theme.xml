<?xml version="1.0" encoding="UTF-8"?>

<theme name="o-pie" author="Simon Schneegans" email="josi.schneegans@vr-web.de">
    <ring radius="100" maxZoom="1.2" zoomRange="0.2" transitionTime="0.1" fadeInTime="0.2" fadeOutTime="0.2">
        <center radius="65" activeRadius="40">
            <center_layer file="ring.svg" 
                          active_scale="1"   active_turnToMouse="false"   active_rotationSpeed="2.5"    active_colorize="true"    active_alpha="1.0"
                          inactive_scale="1" inactive_turnToMouse="false" inactive_rotationSpeed="-0.5" inactive_colorize="false" inactive_alpha="1.0" />
            <center_layer file="arrow.svg" 
                          active_scale="1"     active_turnToMouse="true"   active_rotationSpeed="6.0"    active_colorize="true"    active_alpha="1.0" 
                          inactive_scale="0.6" inactive_turnToMouse="true" inactive_rotationSpeed="6.0"  inactive_colorize="false" inactive_alpha="0.0" />
        </center>
        <slices radius="26">
            <activeSlice>
                <slice_layer type="file" file="icon_bg.svg"   scale="1"   colorize="false" />
                <slice_layer type="icon" file="icon_mask.svg" scale="0.9" colorize="false" />
                <slice_layer type="file" file="icon_fg_active.svg"   scale="1"   colorize="false" />
            </activeSlice>
            <inactiveSlice>
                <slice_layer type="file" file="icon_bg.svg"   scale="1"   colorize="false" />
                <slice_layer type="icon" file="icon_mask.svg" scale="0.9" colorize="false" />
                <slice_layer type="file" file="icon_fg.svg"   scale="1"   colorize="false" />
            </inactiveSlice>
        </slices>
    </ring>
</theme>

