<?xml version="1.0" encoding="UTF-8"?>

<theme name="Unity" description="A theme made for the Unity interface of Ubuntu" author="Simon Schneegans" email="josi.schneegans@vr-web.de">
    <ring radius="120" maxZoom="1.1" zoomRange="0.1" transitionTime="0.3" fadeInTime="0.4" fadeOutTime="0.3">
        <center radius="80" activeRadius="55">
            <center_layer file="ring.svg" 
                          active_scale="0.8"   active_turnToMouse="false"   active_rotationSpeed="0"    active_colorize="false"    active_alpha="1.0"
                          inactive_scale="0.8" inactive_turnToMouse="false" inactive_rotationSpeed="0" inactive_colorize="false" inactive_alpha="1.0" />
            <center_layer file="arrow.svg" 
                          active_scale="1.0"     active_turnToMouse="true"   active_rotationSpeed="10.0"    active_colorize="false"    active_alpha="1.0" 
                          inactive_scale="1.0" inactive_turnToMouse="false" inactive_rotationSpeed="0.0"  inactive_colorize="false" inactive_alpha="0.0" />
        </center>
        <slices radius="26">
            <activeSlice>
                <slice_layer type="file" file="icon_active.svg"   scale="1"   colorize="true" />
                <slice_layer type="file" file="gloss.svg"   scale="1"   colorize="false" />
                <slice_layer type="icon" scale="0.9" colorize="false" />
            </activeSlice>
            <inactiveSlice>
                <slice_layer type="file" file="icon_inactive.svg"   scale="1"   colorize="false" />
                <slice_layer type="file" file="gloss.svg"   scale="1"   colorize="false" />
                <slice_layer type="icon" scale="0.9" colorize="false" />
            </inactiveSlice>
        </slices>
        <caption position="0" size="12"/>
    </ring>
</theme>

